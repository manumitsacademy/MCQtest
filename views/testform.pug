html 
    head 
        title #{subjectname}
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css')
        script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
        script 
            include script.js
    body
        blockquote.blockquote.text-center
            h1.mb-0
                |Subject :  #{subjectname}
        .col.col-md-5.col-lg-10.col-xl-100.align-items-center(style='margin-left:10%;margin-right:10%;')
            form(action="/addtest/"+subject.id,method="post" class="form-horizontal" id="testform" name="testform")
                .form-group(style="margin-top:20px;")
                    label(for="testname") Test Name
                    input#testname.form-control(type='text', name="testname", placeholder='Enter Test Name' style='width:50%')
                div#questions
                    fieldset#1 
                        legend Question1
                            //- .btn.btn-primary(type='button', onclick="removeQuestion('#{this.id}')") Remove Question
                            .form-group 
                                input.form-control(type='text', name=1, placeholder='Enter Question' style='width:98%')
                            .form-group
                                .form-group.col-md-6.mr-3
                                        input.form-control(type='text', placeholder='Option1', name=1, required='required')
                                .form-group.col-md-6.mr-3
                                        input.form-control(type='text', placeholder='Option2', name=1, required='required')
                                .form-group.col-md-6.mr-3
                                        input.form-control(type='text', placeholder='Option3', name=1, required='required')
                                .form-group.col-md-6.mr-3
                                        input.form-control(type='text', placeholder='Option4', name=1, required='required')
                                .form-group.col-md-6.mr-3(style='margin-left:20%;')
                                    input.form-control(type='text', placeholder='Answer', name=1, required='required')
                                .form-group.col-md-6.mr-3
                                        input.form-control(type='number', placeholder='Marks', name=1, required='required' value="1")
                button.btn.btn-primary(type='button' onclick='addQuestion()' style="margin-right:20px") Add question
                //- button.btn.btn-primary(type='button' onclick='removeQuestion()' style="margin-right:20px;float:right") Remove question
                button.btn.btn-primary(type='submit') Add Quiz